{
  "extends": "@toktokhan-dev/ts-config/nextjs.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@/theme/*": ["./configs/theme/*"],
      "@/swagger/*": ["./generated/swagger/*"],
      "@/images": ["./generated/path/images.ts"],
      "@/icons": ["./generated/icons/MyIcons.tsx"],
      "@/packageJSON": ["../package.json"],
      "@/constants/*": ["./constants/*"]
    },
    "incremental": true,
    "declaration": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    "src/components/@layout/page-layout/components/page-layout-header/header-navigation-constant.ts"
  ],
  "exclude": ["node_modules", "./public/mockServiceWorker.js"]
}
